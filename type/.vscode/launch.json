    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Debug",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8080/output/index.html",
			"sourceMaps": true,
            "webRoot": "${workspaceFolder}"            
        },
        {
            "name": "Debug Current (TypeScript)",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        }
    ]
}